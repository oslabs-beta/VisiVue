  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["vite.config.ts", "src", "src/**/*"],
  "exclude": ["node_modules"]
}
